generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:password@localhost:5432/mydb?schema=public"
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  oauth_token_secret String?
  oauth_token        String?
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Profile {
  id       String  @id @default(cuid())
  bio      String?
  userId   String  @unique
  timezone String?
  user     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model TwitchAuthToken {
  type            String @unique
  twitchAuthToken String
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  Profile       Profile?
  sessions      Session[]
  games         Int[]
}

model Game {
  id               Int      @id @default(autoincrement())
  externalId       Int      @unique
  name             String
  summary          String?
  url              String?
  platforms        Int[]
  platformNames    String[]
  gameModes        Int[]
  gameModeNames    String[]
  genres           Int[]
  gameGenreNames   String[]
  firstReleaseDate Int?
  totalRating      Float?
}

model Platform {
  id         Int    @id @default(autoincrement())
  externalId Int    @unique
  name       String
}

model GameMode {
  id         Int    @id @default(autoincrement())
  externalId Int    @unique
  name       String
}

model Genre {
  id         Int    @id @default(autoincrement())
  externalId Int    @unique
  name       String
}
